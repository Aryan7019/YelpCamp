   <link href="https://api.mapbox.com/mapbox-gl-js/v3.9.2/mapbox-gl.css" rel="stylesheet">
   <script src="https://api.mapbox.com/mapbox-gl-js/v3.9.2/mapbox-gl.js"></script>

   <title>YELPCAMP</title>

   <style>
      
      .nav-link{
         font-weight: 700;
      }

      body, html {
         margin: 0;
         padding: 0;
         width: 100%;
         overflow-x: hidden; /* Prevent horizontal scrolling */
      }
   
      .container {
         max-width: 100%; /* Stretch container full width */
         padding-left: 0.5cm;  /* Remove default padding */
         padding-right: 0.5cm; /* Remove default padding */
      }
   
      .card {
         transition: transform 0.3s ease;
      }
   
      .card:hover {
         transform: translateY(-10px);
         transform: scale(1.06, 1.06);
      }
   
      footer {
         background-color: #343a40;
         color: white;
         text-align: center;
         padding: 1rem 0;
         margin-top: 2rem;
      }
   </style>
   
   

</head>
<body class="d-flex flex-column vh-100">
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid" style="padding-left: 0.5cm;">
         <a class="navbar-brand" href="/">YelpCamp</a>
         
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
               <a class="nav-link" href="/">Home</a>
               <a class="nav-link active" aria-current="page" href="/campgrounds">Campgrounds</a>
               <a class="nav-link" href="/campgrounds/new">New</a>
            </div>
            <div class="navbar-nav ms-auto">
               <% if(!currentUser){ %>
               <a class="nav-link" href="/login">Login</a>
               <a class="nav-link" href="/register">Register</a>
               <% } else { %>
               <a class="nav-link" href="/logout">Logout</a>
               <% } %>
            </div>
         </div>
      </div>
   </nav>
   

   <div class="container px-md-5 px-3" style="margin-top: 3rem;">
      <%- include('../partials/flash')  %>
      <%- body %>
   </div>

   <footer class="mt-auto">
      <div class="container">
         <p>&copy; 2025 YelpCamp. All rights reserved.</p>
      </div>
   </footer>
   
</body>
</html>


