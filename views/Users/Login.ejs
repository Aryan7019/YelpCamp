<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-3">
   <div class="row w-100">
      <div class="col-12 col-md-6 col-lg-3 mx-auto"> <!-- Adjusted to allow for responsiveness on all screen sizes -->
         <div class="card shadow" style=" margin-bottom: 50px !important; transition: none; transform: none;">
            <img src="https://images.unsplash.com/photo-1657664069060-706017d35842?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" style="height: 250px; object-fit: cover; object-position: top;">
            <div class="card-body">
               <h1 class="card-title text-center">Login</h1>

               <!-- Login Form -->
               <form action="/login" method="post" class="validated-form" novalidate>
                  <!-- Username Field -->
                  <div class="mb-3">
                     <label for="username" class="form-label">Username</label>
                     <input type="text" class="form-control" name="username" id="username" autofocus required>
                     <div class="invalid-feedback">Please enter your username.</div>
                  </div>

                  <!-- Password Field -->
                  <div class="mb-3">
                     <label for="password" class="form-label">Password</label>
                     <input type="password" class="form-control" name="password" id="password" required>
                     <div class="invalid-feedback">Please enter your password.</div>
                  </div>

                  <!-- Submit Button -->
                  <div class="d-grid">
                     <button type="submit" class="btn btn-success btn-block">Login</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>

<!-- Custom CSS for Small Screens -->
<style>
   @media (max-width: 360px) {
      .container {
         padding-left: 0;
         padding-right: 0;
      }
      .card {
         width: 100%;  /* Ensure the card takes up full width */
      }
   }
</style>
