<% layout('layouts/boilerplate') %>
<h1 class="title text-center">Edit <%= campground.title %></h1>
<form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">

   <div class="mb-3">
      <label class="form-label">Title</label>
      <input class="input form-control" type="text" name="campground[title]" id="title" value="<%= campground.title %>" required>
      <div id="title" class="invalid-feedback">Please choose a title!</div>
    </div>

   <div class="mb-3">
      <label class="form-label">Location</label>
      <input class="input form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required>
      <div id="location" class="invalid-feedback">Please provide a location!</div>   
   </div>

   <div class="input-group mb-3">
      <label class="form-label">Price</label>
      <div class="input-group">
         <span class="input-group-text">$</span>
         <input class="input form-control" type="number" name="campground[price]" id="price" placeholder="0.00" min="0" value="<%= campground.price %>" required>
         <div id="price" class="invalid-feedback">Please set a price!</div>
      </div>
    </div>

   <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea class="textarea form-control" name="campground[description]" id="description"  required><%= campground.description %></textarea>
      <div id="description" class="invalid-feedback">Please give a description!</div>
   </div>

   <div class="input-group mb-3">
      <label class="input-group-text" for="inputGroupFile01">Add more Image(s)</label>
      <input type="file" name="image" class="form-control" id="inputGroupFile01" multiple>
    </div>

    <div class="mb-3">
      <% campground.images.forEach(function(img,i){ %>
         <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
         <div class="form-check-inline">
            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
         </div>
         <label for="image-<%= i %>">Delete?</label>
      <% }) %>   
    </div>

   <div class="mb-3 d-flex justify-content-between">
      <button type="submit" class="btn btn-success">Updata</button>
      <a href="/campgrounds/<%= campground.id %>" class="btn btn-warning float-end">Cancel</a>
   </div>
</form>

